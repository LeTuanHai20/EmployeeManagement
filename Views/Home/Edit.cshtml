@model HomeEditViewModel
@{
     ViewBag.Tilte = "Edit Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@section header{
    <link href="~/css/Style.css" rel="stylesheet" asp-append-version="true" />
}
<form asp-action="Edit" asp-controller="Home" method="post" enctype="multipart/form-data">
    <input hidden asp-for="ID" />
    <input hidden asp-for="ExistingPhotoPath" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" placeholder="Enter Name" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" placeholder="Enter Email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department"></label>
        <select class="form-control" asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()">
            <option value="">Please Select</option>
        </select>
        <span asp-validation-for="Department" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Photo"></label>
        <div class="custom-file">
            <input class="form-control custom-file-input" placeholder="Enter Images" asp-for="Photo">
            <label class="custom-file-label">Click here to change photo</label>
        </div>
    </div>

    <div class="nut">
        <button type="submit" class="btn btn-primary" asp-action="Edit" asp-controller="Home">Update</button>
        <a asp-action="Index" asp-controller="home" class="btn btn-primary ">Cancel</a>
    </div>
    @section Script{
        <script>
            $(document).ready(function () {
                $(".custom-file-input").on("change", function () {
                    var fileLabel = $(this).next(".custom-file-label");
                    var files = $(this)[0].files;
                    fileLabel.html(files[0].name);
                });
            });
        </script>
    }
</form>

 